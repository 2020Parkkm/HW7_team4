#include <iostream>
#include <fstream>
using namespace std;
void main() {
   int a = 1234;
   int b[5] = {1000,2000,3000,4000,5000};
   float c[3] = { -0.5, 0, 0.5 };
   
   //방법1
   for (int i = 0; i < 5; i++) {
      b[i] = b[i] * 5;
   }
   for (int i = 0; i < 3; i++) {
      c[i] = c[i] * c[i];
   }
   ofstream x;
   x.open("mybin.dat", ios::binary | ios::out);
   x.write((char*)a, 4);
   x.write((char*)b, 20);
   x.write((char*)c, 12);
   x.close();
}
